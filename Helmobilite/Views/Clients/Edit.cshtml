@model Helmobilite.ViewModels.ClientEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Clients</h4>
<hr />
<div class="row">
    <p>@ViewBag.Error</p>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" readonly />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" readonly />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnterpriseName" class="control-label"></label>
                <input asp-for="EnterpriseName" class="form-control" readonly />
                <span asp-validation-for="EnterpriseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnterpriseAddress" class="control-label"></label>
                <input asp-for="EnterpriseAddress" class="form-control" readonly />
                <span asp-validation-for="EnterpriseAddress" class="text-danger"></span>
            </div>
            <div class="form-check form-switch">
                <label asp-for="Untrusted" class="form-check-label">Mauvais payeur ?</label>
                <input asp-for="Untrusted" class="form-check-input" type="checkbox" role="switch">
                <span asp-validation-for="Untrusted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>