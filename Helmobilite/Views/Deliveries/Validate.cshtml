@model Helmobilite.ViewModels.ValidateDeliveryViewModel;

@{
    ViewData["Title"] = "Valider un livraison";
}

<h1>@ViewData["Title"]</h1>

<h4>Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            if(ViewData["Error"] != null)
            {
                <p>@ViewData["Error"]</p>
            }
        }
        <div>
            <p>Chauffeur en charge de la livraison: @Model.DriverName</p>
            <p>Description de la livraison:</p>
            <p>@Model.Content</p>
        </div>
        <form asp-action="Validate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Validate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>