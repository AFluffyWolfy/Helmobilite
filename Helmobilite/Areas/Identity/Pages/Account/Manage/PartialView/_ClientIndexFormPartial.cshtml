@model IndexModel

<div class="form-floating">
    <input asp-for="Input.EnterpriseName" class="form-control" />
    <label asp-for="Input.EnterpriseName" class="form-label"></label>
    <span asp-validation-for="Input.EnterpriseName" class="text-danger"></span>
</div>
<div class="form-floating">
    <input asp-for="Input.EnterpriseAddress" class="form-control" />
    <label asp-for="Input.EnterpriseAddress" class="form-label"></label>
    <span asp-validation-for="Input.EnterpriseAddress" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Input.Picture" class="control-label"></label>
    <input asp-for="Input.Picture" type="file" accept=".png,.jpg,.jpeg,.gif" class="form-control" />
    <span asp-validation-for="Input.Picture" class="text-danger"></span>
    <input type="hidden" asp-for="Input.PicturePath" />
</div>
@if(Model.Input.PicturePath != null)
{
    <div class="form-group">
        <p>Logo de votre entreprise</p>
        <img src="@Model.Input.PicturePath" alt="Logo entreprise" class="img-fluid img-thumbnail" style="max-height: 20em; max-width: 20em" />
    </div>
}

