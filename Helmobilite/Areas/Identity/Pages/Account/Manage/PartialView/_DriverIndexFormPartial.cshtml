@model IndexModel

<div class="form-floating">
    <input asp-for="Input.Matricule" class="form-control" disabled />
    <label asp-for="Input.Matricule" class="form-label"></label>
    <span asp-validation-for="Input.Matricule" class="text-danger"></span>
</div>
<div class="form-floating">
    <input asp-for="Input.Birthday" type="date" class="form-control" />
    <label asp-for="Input.Birthday" class="form-label"></label>
    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
</div>
<div class="form-floating">
    <select asp-for="Input.DriverLicense" class="form-control" asp-items="Html.GetEnumSelectList<DriverLicense>()" disabled></select>
    <label asp-for="Input.DriverLicense" class="form-label"></label>
    <span asp-validation-for="Input.DriverLicense" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Input.Picture" class="control-label"></label>
    <input asp-for="Input.Picture" type="file" accept=".png,.jpg,.jpeg,.gif" class="form-control" />
    <span asp-validation-for="Input.Picture" class="text-danger"></span>
    <input type="hidden" asp-for="Input.PicturePath" />
</div>
@if (Model.Input.PicturePath != null)
{
    <div class="form-group">
        <p>Photo de profil actuelle</p>
        <img src="@Model.Input.PicturePath" alt="Photo de profil" class="img-fluid img-thumbnail" style="max-height: 20em; max-width: 20em" />
    </div>
}